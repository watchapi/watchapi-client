{
    "scopeName": "source.http",
    "fileTypes": [
        "http",
        "rest"
    ],
    "keyEquivalent": "^~H",
    "name": "http",
    "patterns": [
        {
            "begin": "\\s*(?=(\\[|{[^{]))",
            "name": "http.request.body.json",
            "end": "^\\s*(\\#{3,}.*?)?\\s*$",
            "endCaptures": {
                "0": {
                    "name": "comment.line.sharp.http"
                }
            },
            "patterns": [
                {
                    "include": "source.json"
                },
                {
                    "include": "#variable"
                }
            ]
        },
        {
            "begin": "^\\s*(?=<\\S)",
            "name": "http.request.body.xml",
            "end": "^\\s*(\\#{3,}.*?)?\\s*$",
            "endCaptures": {
                "0": {
                    "name": "comment.line.sharp.http"
                }
            },
            "patterns": [
                {
                    "include": "text.xml"
                },
                {
                    "include": "#variable"
                }
            ]
        },
        {
            "include": "#metadata"
        },
        {
            "include": "#comments"
        },
        {
            "comment": "2xx Success response line",
            "match": "(2\\d{2}\\s+[^•]+)(•\\s*\\d+(?:\\.\\d+)?\\s*ms\\s*•\\s*\\d+(?:\\.\\d+)?\\s*(?:KB|MB|B))",
            "captures": {
                "1": { "name": "entity.name.function.http" }
            }
        },
        {
            "comment": "3xx Redirect response line",
            "match": "(3\\d{2}\\s+[^•]+)(•\\s*\\d+(?:\\.\\d+)?\\s*ms\\s*•\\s*\\d+(?:\\.\\d+)?\\s*(?:KB|MB|B))",
            "captures": {
                "1": { "name": "constant.language.http" }
            }
        },
        {
            "comment": "4xx Client Error response line",
            "match": "(4\\d{2}\\s+[^•]+)(•\\s*\\d+(?:\\.\\d+)?\\s*ms\\s*•\\s*\\d+(?:\\.\\d+)?\\s*(?:KB|MB|B))",
            "captures": {
                "1": { "name": "variable.language.http" }
            }
        },
        {
            "comment": "5xx Server Error response line",
            "match": "(5\\d{2}\\s+[^•]+)(•\\s*\\d+(?:\\.\\d+)?\\s*ms\\s*•\\s*\\d+(?:\\.\\d+)?\\s*(?:KB|MB|B))",
            "captures": {
                "1": { "name": "invalid.illegal.http" }
            }
        },
        {
            "comment": "@set directive for response variable extraction",
            "captures": {
                "1": {
                    "name": "keyword.control.directive.http"
                },
                "2": {
                    "name": "variable.other.readwrite.http"
                },
                "3": {
                    "name": "keyword.operator.assignment.http"
                },
                "4": {
                    "name": "keyword.other.http"
                },
                "5": {
                    "name": "support.type.property-name.http"
                },
                "6": {
                    "name": "variable.other.property.http"
                }
            },
            "match": "^\\s*(@set)\\s+(\\w+)\\s*(=)\\s*(response\\.)?(headers|cookies|body)?(?:\\.)?(.*)$",
            "name": "http.set-directive"
        },
        {
            "captures": {
                "1": {
                    "name": "keyword.other.http"
                },
                "2": {
                    "name": "variable.other.http"
                },
                "3": {
                    "patterns": [
                        {
                            "include": "#variable"
                        },
                        {
                            "match": ".*",
                            "name": "string.other.http"
                        }
                    ]
                }
            },
            "match": "^\\s*(@)([^\\s=]+)\\s*=\\s*(.*?)\\s*$",
            "name": "http.filevariable"
        },
        {
            "captures": {
                "1": {
                    "name": "keyword.operator.http"
                },
                "2": {
                    "name": "variable.other.http"
                },
                "3": {
                    "patterns": [
                        {
                            "include": "#variable"
                        },
                        {
                            "match": ".*",
                            "name": "string.other.http"
                        }
                    ]
                }
            },
            "match": "^\\s*(\\?|&)([^=\\s]+)=(.*)$",
            "name": "http.query"
        },
        {
            "captures": {
                "1": {
                    "name": "entity.name.tag.http"
                },
                "2": {
                    "name": "keyword.other.http"
                },
                "3": {
                    "patterns": [
                        {
                            "include": "#variable"
                        },
                        {
                            "match": ".*",
                            "name": "string.other.http"
                        }
                    ]
                }
            },
            "match": "^([\\w\\-]+)\\s*(\\:)\\s*([^\/].*?)\\s*$",
            "name": "http.headers"
        },
        {
            "include": "#request-line"
        },
        {
            "include": "#variable"
        }
    ],
    "repository": {
        "variable": {
            "patterns": [
                {
                    "match": "\\{\\{\\s*(\\$(?:timestamp|guid|randomInt|processEnv)[^}]*)\\s*\\}\\}",
                    "name": "variable.other.http.system",
                    "captures": {
                        "1": {
                            "name": "support.variable.http"
                        }
                    }
                },
                {
                    "match": "\\{\\{\\s*([\\w.-]+)(?:\\.(request|response)(?:\\.(body|headers)(?:\\.([\\w.-]+))?)?)\\s*\\}\\}",
                    "name": "variable.other.http.request",
                    "captures": {
                        "1": {
                            "name": "variable.other.http"
                        },
                        "2": {
                            "name": "keyword.other.http"
                        },
                        "3": {
                            "name": "keyword.other.http"
                        },
                        "4": {
                            "name": "variable.other.http"
                        }
                    }
                },
                {
                    "match": "\\{\\{\\s*([^\\s{}]+)\\s*\\}\\}",
                    "name": "variable.other.http.env",
                    "captures": {
                        "1": {
                            "name": "variable.other.http"
                        }
                    }
                }
            ]
        },
        "metadata": {
            "patterns": [
                {
                    "match": "^\\s*\\#{1,}\\s+(?:((@)name)\\s+([^\\s\\.]+))$",
                    "captures": {
                        "1": {
                            "name": "entity.other.attribute-name"
                        },
                        "2": {
                            "name": "punctuation.definition.block.tag.metadata"
                        },
                        "3": {
                            "name": "entity.name.type.http"
                        }
                    },
                    "name": "comment.line.sharp.http"
                },
                {
                    "match": "^\\s*\\/{2,}\\s+(?:((@)name)\\s+([^\\s\\.]+))$",
                    "captures": {
                        "1": {
                            "name": "entity.other.attribute-name"
                        },
                        "2": {
                            "name": "punctuation.definition.block.tag.metadata"
                        },
                        "3": {
                            "name": "entity.name.type.http"
                        }
                    },
                    "name": "comment.line.double-slash.http"
                },
                {
                    "match": "^\\s*\\#{1,}\\s+((@)note)\\s*$",
                    "captures": {
                        "1": {
                            "name": "entity.other.attribute-name"
                        },
                        "2": {
                            "name": "punctuation.definition.block.tag.metadata"
                        }
                    },
                    "name": "comment.line.sharp.http"
                },
                {
                    "match": "^\\s*\\/{2,}\\s+((@)note)\\s*$",
                    "captures": {
                        "1": {
                            "name": "entity.other.attribute-name"
                        },
                        "2": {
                            "name": "punctuation.definition.block.tag.metadata"
                        }
                    },
                    "name": "comment.line.double-slash.http"
                },
                {
                    "match": "^\\s*\\#{1,}\\s+(?:((@)prompt)\\s+([^\\s]+)(?:\\s+(.*))?\\s*)$",
                    "captures": {
                        "1": {
                            "name": "entity.other.attribute-name"
                        },
                        "2": {
                            "name": "punctuation.definition.block.tag.metadata"
                        },
                        "3": {
                            "name": "variable.other.http"
                        },
                        "4": {
                            "name": "string.other.http"
                        }
                    },
                    "name": "comment.line.sharp.http"
                },
                {
                    "match": "^\\s*\\/{2,}\\s+(?:((@)prompt)\\s+([^\\s]+)(?:\\s+(.*))?\\s*)$",
                    "captures": {
                        "1": {
                            "name": "entity.other.attribute-name"
                        },
                        "2": {
                            "name": "punctuation.definition.block.tag.metadata"
                        },
                        "3": {
                            "name": "variable.other.http"
                        },
                        "4": {
                            "name": "string.other.http"
                        }
                    },
                    "name": "comment.line.double-slash.http"
                }
            ]
        },
        "comments": {
            "patterns": [
                {
                    "match": "^\\s*\\#{1,}.*$",
                    "name": "comment.line.sharp.http"
                },
                {
                    "match": "^\\s*\\/{2,}.*$",
                    "name": "comment.line.double-slash.http"
                }
            ]
        },
        "request-line": {
            "captures": {
                "1": {
                    "name": "keyword.control.http"
                },
                "2": {
                    "patterns": [
                        {
                            "include": "#variable"
                        },
                        {
                            "match": "[^{}]+",
                            "name": "const.language.http"
                        }
                    ]
                },
                "3": {
                    "patterns": [
                        {
                            "include": "#protocol"
                        }
                    ]
                }
            },
            "match": "(?i)^(?:(get|post|put|delete|patch|head|options|connect|trace|lock|unlock|propfind|proppatch|copy|move|mkcol|mkcalendar|acl|search)\\s+)\\s*(.+?)(?:\\s+(HTTP\\/\\S+))?$",
            "name": "http.requestline"
        },
        "response-line": {
            "patterns": [
                {
                    "comment": "2xx Success - green",
                    "match": "^(2[0-9][0-9])\\s+(.*)$",
                    "captures": {
                        "1": {
                            "name": "string.http.status.success"
                        },
                        "2": {
                            "name": "string.http.status.success"
                        }
                    },
                    "name": "http.responseLine.success"
                },
                {
                    "comment": "3xx Redirect - blue",
                    "match": "^(3[0-9][0-9])\\s+(.*)$",
                    "captures": {
                        "1": {
                            "name": "markup.changed.http.status.redirect"
                        },
                        "2": {
                            "name": "markup.changed.http.status.redirect"
                        }
                    },
                    "name": "http.responseLine.redirect"
                },
                {
                    "comment": "4xx Client Error - orange/yellow",
                    "match": "^(4[0-9][0-9])\\s+(.*)$",
                    "captures": {
                        "1": {
                            "name": "markup.deleted.http.status.clientError"
                        },
                        "2": {
                            "name": "markup.deleted.http.status.clientError"
                        }
                    },
                    "name": "http.responseLine.clientError"
                },
                {
                    "comment": "5xx Server Error - red",
                    "match": "^(5[0-9][0-9])\\s+(.*)$",
                    "captures": {
                        "1": {
                            "name": "invalid.illegal.http.status.serverError"
                        },
                        "2": {
                            "name": "invalid.illegal.http.status.serverError"
                        }
                    },
                    "name": "http.responseLine.serverError"
                },
                {
                    "comment": "HTTP/x.x format for standard responses",
                    "match": "(?i)^\\s*(HTTP\\/\\S+)\\s+([1-5][0-9][0-9])\\s+(.*)$",
                    "captures": {
                        "1": {
                            "name": "keyword.other.http"
                        },
                        "2": {
                            "name": "constant.numeric.http"
                        },
                        "3": {
                            "name": "string.other.http"
                        }
                    },
                    "name": "http.responseLine"
                }
            ]
        },
        "response-metadata": {
            "comment": "Response timing and size metadata",
            "match": "^(\\d+(?:\\.\\d+)?\\s*ms)\\s+(\\d+(?:\\.\\d+)?\\s*(?:KB|MB|B))$",
            "captures": {
                "1": {
                    "name": "comment.http.timing"
                },
                "2": {
                    "name": "comment.http.size"
                }
            },
            "name": "http.responseMetadata"
        },
        "protocol": {
            "patterns": [
                {
                    "captures": {
                        "1": {
                            "name": "keyword.other.http"
                        },
                        "2": {
                            "name": "constant.numeric.http"
                        }
                    },
                    "name": "http.version",
                    "match": "(HTTP)\\/(\\d+.\\d+)"
                }
            ]
        }
    }
}
