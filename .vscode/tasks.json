{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "watch",
      "dependsOn": ["npm: watch:tsc", "npm: watch:esbuild"],
      "dependsOrder": "parallel",
      "presentation": {
        "reveal": "never"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },

    {
      "type": "npm",
      "script": "watch:tsc",
      "label": "npm: watch:tsc",
      "isBackground": true,
      "problemMatcher": "$tsc-watch",
      "presentation": {
        "group": "watch",
        "reveal": "never"
      }
    },

    {
      "type": "npm",
      "script": "watch:esbuild",
      "label": "npm: watch:esbuild",
      "isBackground": true,
      "problemMatcher": {
        "owner": "esbuild",
        "pattern": [
          {
            "regexp": "^âœ˜ \\[ERROR\\] (.+)$",
            "message": 1
          },
          {
            "regexp": "^\\s+(.*):(\\d+):(\\d+):$",
            "file": 1,
            "line": 2,
            "column": 3,
            "loop": true
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^\\[watch\\] build started$",
          "endsPattern": "^\\[watch\\] build finished$"
        }
      },
      "presentation": {
        "group": "watch",
        "reveal": "never"
      }
    }
  ]
}
