{
  "name": "watchapi-client",
  "displayName": "WatchAPI",
  "description": "Manage and sync API endpoints directly from VS Code to WatchAPI cloud",
  "version": "0.1.2",
  "icon": "assets/marketplace-logo.png",
  "publisher": "watchapi",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other",
    "Testing",
    "Programming Languages"
  ],
  "keywords": [
    "api",
    "rest",
    "http",
    "api-testing",
    "rest-client",
    "openapi",
    "developer-tools"
  ],
  "preview": true,
  "repository": {
    "url": "https://github.com/watchapi/watchapi-client"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "keybindings": [
    {
      "command": "watchapi.deleteEndpoint",
      "mac": "cmd+backspace",
      "key": "delete",
      "when": "view == watchapi.collections && viewItem == endpoint",
      "description": "Delete the selected API endpoint"
    },
    {
      "command": "watchapi.deleteCollection",
      "mac": "cmd+backspace",
      "key": "delete",
      "when": "view == watchapi.collections && viewItem == collection",
      "description": "Delete the selected API collection"
    }
  ],
  "contributes": {
    "uriHandlers": [
      {
        "id": "watchapi.watchapi-client"
      }
    ],
    "commands": [
      {
        "command": "watchapi.refresh",
        "title": "WatchAPI: Refresh Collections",
        "icon": "$(refresh)"
      },
      {
        "command": "watchapi.focus",
        "title": "WatchAPI: Focus Collection View"
      },
      {
        "command": "watchapi.openDashboard",
        "title": "WatchAPI: Open Dashboard",
        "icon": "$(globe)"
      },
      {
        "command": "watchapi.addCollection",
        "title": "WatchAPI: Add Collection",
        "icon": "$(add)"
      },
      {
        "command": "watchapi.deleteCollection",
        "title": "Delete Collection(s)",
        "icon": "$(bin)",
        "enablement": "view == watchapi.collections"
      },
      {
        "command": "watchapi.addEndpoint",
        "title": "Add Endpoint",
        "icon": "$(add)",
        "enablement": "view == watchapi.collections"
      },
      {
        "command": "watchapi.uploadEndpoints",
        "title": "WatchAPI: Upload Endpoints",
        "icon": "$(cloud-upload)"
      },
      {
        "command": "watchapi.deleteEndpoint",
        "title": "Delete Endpoint(s)",
        "enablement": "view == watchapi.collections"
      },
      {
        "command": "watchapi.login",
        "title": "Login",
        "icon": "$(account)"
      },
      {
        "command": "watchapi.logout",
        "title": "Logout",
        "icon": "$(sign-out)"
      },
      {
        "command": "watchapi.switchOrganization",
        "title": "WatchAPI: Select Organization",
        "icon": "$(organization)"
      }
    ],
    "viewsWelcome": [
      {
        "view": "watchapi.collections",
        "contents": "No collections yet.\n\n[$(add) New Collection](command:watchapi.addCollection)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "watchapi.login",
          "when": "view == watchapi.collections && !watchapi.loggedIn",
          "group": "menu@1"
        },
        {
          "command": "watchapi.logout",
          "when": "view == watchapi.collections && watchapi.loggedIn",
          "group": "menu@1"
        },
        {
          "command": "watchapi.switchOrganization",
          "when": "view == watchapi.collections && watchapi.loggedIn",
          "group": "menu@2"
        },
        {
          "command": "watchapi.addCollection",
          "when": "view == watchapi.collections",
          "group": "navigation@1"
        },
        {
          "command": "watchapi.uploadEndpoints",
          "when": "view == watchapi.collections",
          "group": "navigation@2"
        },
        {
          "command": "watchapi.refresh",
          "when": "view == watchapi.collections",
          "group": "navigation@3"
        }
      ],
      "view/item/context": [
        {
          "command": "watchapi.deleteCollection",
          "when": "view == watchapi.collections && viewItem == collection",
          "group": "navigation@99"
        },
        {
          "command": "watchapi.addEndpoint",
          "when": "view == watchapi.collections && viewItem == collection",
          "group": "inline"
        },
        {
          "command": "watchapi.deleteEndpoint",
          "when": "view == watchapi.collections && viewItem == endpoint",
          "group": "navigation@99"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "watchapi",
          "title": "WatchAPI Client",
          "icon": "assets/icon.png"
        }
      ]
    },
    "views": {
      "watchapi": [
        {
          "id": "watchapi.collections",
          "name": ""
        }
      ]
    },
    "configuration": {
      "title": "WatchAPI",
      "properties": {
        "watchapi.apiUrl": {
          "type": "string",
          "default": "https://watchapi.com",
          "markdownDescription": "WatchAPI backend URL. Change this if you're running a self-hosted instance.",
          "order": 1
        },
        "watchapi.dashboardUrl": {
          "type": "string",
          "default": "https://watchapi.com",
          "markdownDescription": "WatchAPI dashboard URL for opening in browser.",
          "order": 2
        }
      }
    }
  },
  "scripts": {
    "vscode:package": "pnpm run package",
    "vscode:publish": "pnpm exec vsce publish --no-dependencies",
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "dependencies": {
    "@trpc/client": "^11.0.0",
    "@vscode/test-cli": "^0.0.12",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "22.x",
    "@types/vscode": "^1.90.0",
    "@vitest/ui": "^2.0.0",
    "eslint": "^9.39.1",
    "npm-run-all": "^4.1.5",
    "ts-loader": "^9.5.4",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3",
    "esbuild": "^0.27.1",
    "typescript-eslint": "^8.48.1",
    "vitest": "^2.0.0",
    "webpack": "^5.104.1",
    "webpack-cli": "^6.0.1"
  }
}